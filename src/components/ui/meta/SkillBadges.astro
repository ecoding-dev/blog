function getBadge(skill: string): string {
  return badgeMap[skill] || `https://img.shields.io/badge/${encodeURIComponent(skill)}-gray?style=flat-square`;
}
---
<div class="flex flex-wrap gap-1 mt-1">
  {skills.map(skill => (
    <img src={getBadge(skill)} alt={skill} title={skill} height="20" style="max-height:20px;" loading="lazy" />
  ))}
</div>

