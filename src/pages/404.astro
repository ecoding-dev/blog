---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/sections/Header.astro';
import Footer from '../components/sections/Footer.astro';
---

<html lang="es" data-theme="dark" class="dark">
  <head>
    <BaseHead title="404 – Página no encontrada" description="La página que buscas no existe." />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-6xl px-4 py-16">
      <section class="card-surface p-8 text-center space-y-4">
        <h1 class="text-4xl font-bold text-[color:var(--color-text-primary)]">404</h1>
        <p class="text-lg text-[color:var(--color-text-secondary)]">La página que buscas no existe o ha sido movida.</p>
        <div class="mt-4 flex items-center justify-center gap-3">
          <a href="/" class="sw-btn">Ir al inicio</a>
          <a href="/blog/" class="sw-btn">Ir al blog</a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
